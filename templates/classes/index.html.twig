{% extends 'base.html.twig' %}

{% block title %}Classes index{% endblock %}

{% block body %}
    <h1>Classes index</h1>

    {{ form_start(form) }}
    {{ form_end(form) }}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>
                    <a href="{{ path('app_classes_index', {'sort': 'name', 'direction': (sortProperty == 'name' and orderDirection == 'ASC') ? 'DESC' : 'ASC'}) }}">
                        Name
                        {% if sortProperty == 'name' %}
                            {% if orderDirection == 'ASC' %} &#9650;{% else %} &#9660;{% endif %}
                        {% endif %}
                    </a>
                </th>
                <th>Section</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for class in classes %}
            <tr>
                <td>{{ class.id }}</td>
                <td>{{ class.name }}</td>
                <td>{{ class.section }}</td>
                <td>
                    <a href="{{ path('app_classes_show', {'id': class.id}) }}">show</a>
                    <a href="{{ path('app_classes_edit', {'id': class.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_classes_new') }}">Create new</a>
{% endblock %}
